# Production Environment Configuration for Eden Parfum Backend
# Copy this file to .env.production for production deployment

# Server Configuration
NODE_ENV=production
PORT=3000

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=20m

# Error Monitoring Configuration
ENABLE_ERROR_MONITORING=true
ERROR_NOTIFICATION_EMAIL=admin@edenparfum.com
ERROR_WEBHOOK_URL=

# Database Configuration (Supabase)
SUPABASE_URL=your_production_supabase_url
SUPABASE_ANON_KEY=your_production_supabase_anon_key

# Frontend Configuration
FRONTEND_URL=https://edenparfum.netlify.app

# Security Configuration
CORS_ORIGINS=https://edenparfum.netlify.app,https://your-custom-domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD=2000
MEMORY_USAGE_ALERT_THRESHOLD=80

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60000
ENABLE_DETAILED_HEALTH_CHECK=true

# Notification Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=