# =============================================================================
# Eden Parfum Website - Environment Configuration Template
# =============================================================================
# Copy this file to .env and configure the values according to your environment
# Required variables are marked with [REQUIRED]
# Optional variables have default values shown in comments

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Environment mode [REQUIRED]
# Values: development, production, staging, test
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================

# Supabase Project URL [REQUIRED]
# Get this from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key [REQUIRED]
# Get this from your Supabase project API settings
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key [OPTIONAL]
# Only needed for admin operations
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (default: info)
# Values: error, warn, info, debug
LOG_LEVEL=info

# Log file path (default: ./logs/app.log)
LOG_FILE=./logs/app.log

# Log format (default: combined)
# Values: combined, json, simple, dev
LOG_FORMAT=combined

# Maximum log file size (default: 10MB)
LOG_MAX_SIZE=10485760

# Maximum number of log files to keep (default: 10)
LOG_MAX_FILES=10

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Enable performance monitoring (default: false)
ENABLE_MONITORING=false

# Metrics collection interval in seconds (default: 60)
METRICS_INTERVAL=60

# Health check endpoint timeout in milliseconds (default: 5000)
HEALTH_CHECK_TIMEOUT=5000

# Enable detailed performance metrics (default: false)
ENABLE_PERFORMANCE_METRICS=false

# =============================================================================
# ERROR HANDLING & NOTIFICATIONS
# =============================================================================

# Email notifications for errors
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# ERROR_EMAIL_TO=admin@yoursite.com

# Webhook notifications for errors
# ERROR_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Notification settings
# NOTIFICATION_RATE_LIMIT=5
# NOTIFICATION_COOLDOWN=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key [REQUIRED for authentication]
# Generate a strong random string (32+ characters)
# JWT_SECRET=your-super-secret-jwt-key-here

# Session secret (default: development-secret)
SESSION_SECRET=your-session-secret-here

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yoursite.com

# API rate limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis connection for caching [OPTIONAL]
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Cache TTL in seconds (default: 3600)
CACHE_TTL=3600

# Enable cache busting (default: true)
ENABLE_CACHE_BUSTING=true

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================

# Maximum file upload size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# Allowed file types (comma-separated)
# ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# File storage location (default: ./uploads)
UPLOAD_PATH=./uploads

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Google Analytics tracking ID
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Sentry error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CDN configuration
# CDN_URL=https://cdn.yoursite.com
# CDN_API_KEY=your-cdn-api-key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (default: false)
DEBUG=false

# Enable hot reload for development (default: false)
HOT_RELOAD=false

# Mock external services for testing (default: false)
MOCK_SERVICES=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Enable HTTPS redirect (default: false in development, true in production)
FORCE_HTTPS=false

# Enable gzip compression (default: true)
ENABLE_COMPRESSION=true

# Security headers configuration (default: true)
ENABLE_SECURITY_HEADERS=true

# Minimum TLS version (default: TLSv1.2)
MIN_TLS_VERSION=TLSv1.2

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Automatic backup interval in hours (default: 24)
BACKUP_INTERVAL=24

# Backup retention period in days (default: 30)
BACKUP_RETENTION=30

# Maintenance mode (default: false)
MAINTENANCE_MODE=false

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API version (default: v1)
API_VERSION=v1

# API timeout in milliseconds (default: 30000)
API_TIMEOUT=30000

# API documentation enabled (default: true in development)
ENABLE_API_DOCS=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit the actual .env file to version control
# 2. Generate strong, unique passwords and keys for production
# 3. Use environment-specific configurations
# 4. Regularly rotate secrets and API keys
# 5. Monitor logs for any configuration issues
