# Development Environment Configuration for Eden Parfum Backend
# Copy this file to .env for development

# Server Configuration
NODE_ENV=development
PORT=3000

# Logging Configuration
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE=10m

# Error Monitoring Configuration
ENABLE_ERROR_MONITORING=true
ERROR_NOTIFICATION_EMAIL=
ERROR_WEBHOOK_URL=

# Database Configuration (Supabase)
SUPABASE_URL=your_development_supabase_url
SUPABASE_ANON_KEY=your_development_supabase_anon_key

# Frontend Configuration
FRONTEND_URL=http://localhost:8080

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD=1000
MEMORY_USAGE_ALERT_THRESHOLD=90

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
ENABLE_DETAILED_HEALTH_CHECK=true

# Development Tools
ENABLE_DEBUG_ROUTES=true
ENABLE_TEST_DATA=true